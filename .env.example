# Nanika Game Environment Variables
# Copy this file to .env and update the values

#------------------------------------------------------------------------------
# APPLICATION
#------------------------------------------------------------------------------
NODE_ENV=development
PORT=3000
HOST=localhost

# Session & Security
SESSION_SECRET=your-super-secret-session-key-change-this-in-production-at-least-32-chars
CORS_ORIGIN=http://localhost:3000

#------------------------------------------------------------------------------
# DATABASE
#------------------------------------------------------------------------------
# Development Database URL
DATABASE_URL="postgresql://nanika_user:nanika_password@localhost:5432/nanika_game?schema=public"

# Production Database URLs (for read/write separation)
# DATABASE_WRITE_URL="postgresql://username:password@write-host:5432/database"
# DATABASE_READ_URL="postgresql://username:password@read-host:5432/database"

# Database Connection Pool
DB_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=5000
DB_REQUEST_TIMEOUT=10000

#------------------------------------------------------------------------------
# REDIS
#------------------------------------------------------------------------------
# Redis URL for sessions and WebSocket scaling
REDIS_URL=redis://localhost:6379

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

#------------------------------------------------------------------------------
# WEBSOCKET
#------------------------------------------------------------------------------
# WebSocket Configuration
WEBSOCKET_REDIS_ADAPTER=true
WEBSOCKET_CORS_ORIGIN=http://localhost:3000
WEBSOCKET_PING_TIMEOUT=60000
WEBSOCKET_PING_INTERVAL=25000

#------------------------------------------------------------------------------
# SECURITY
#------------------------------------------------------------------------------
# Security Features
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW=60000  # 1 minute
RATE_LIMIT_MAX=100       # 100 requests per window

# Message Rate Limiting
MESSAGE_RATE_LIMIT=20    # messages per minute
MESSAGE_RATE_WINDOW=60000

#------------------------------------------------------------------------------
# MONITORING & LOGGING
#------------------------------------------------------------------------------
# Logging
LOG_LEVEL=debug
ENABLE_ACCESS_LOG=true
ENABLE_SQL_LOG=false     # Set to true for SQL query logging

# Monitoring
ENABLE_METRICS=false
PROMETHEUS_PORT=9090
GRAFANA_PASSWORD=admin123

# Health Check
HEALTH_CHECK_ENABLED=true

#------------------------------------------------------------------------------
# EMAIL (Future use)
#------------------------------------------------------------------------------
# SMTP Configuration (for notifications)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=noreply@nanika-game.com
# SMTP_PASS=your-smtp-password
# SMTP_FROM=noreply@nanika-game.com

#------------------------------------------------------------------------------
# EXTERNAL SERVICES
#------------------------------------------------------------------------------
# Third-party integrations (Future use)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project
# GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-1

#------------------------------------------------------------------------------
# FILE STORAGE
#------------------------------------------------------------------------------
# Local storage paths
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760   # 10MB

# CDN (Future use)
# CDN_URL=https://cdn.nanika-game.com
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key  
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=nanika-game-assets

#------------------------------------------------------------------------------
# DEVELOPMENT
#------------------------------------------------------------------------------
# Development tools
VITE_HMR_PORT=5173
BROWSER=chrome

# Testing
TEST_DATABASE_URL="postgresql://nanika_user:nanika_password@localhost:5432/nanika_game_test?schema=public"

#------------------------------------------------------------------------------
# PRODUCTION OVERRIDES
#------------------------------------------------------------------------------
# Override these in production
# NODE_ENV=production
# LOG_LEVEL=info
# ENABLE_SQL_LOG=false
# ENABLE_ACCESS_LOG=true
# ENABLE_METRICS=true