{
  "name": "nanika-game",
  "version": "1.0.0",
  "description": "DDD + Clean Architecture Game Application",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "vite dev",
    "dev:server": "tsx --watch app/server.ts",
    "build": "vite build",
    "preview": "vite preview",
    "start": "tsx app/server.ts",
    "start:prod": "NODE_ENV=production tsx app/server.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run app",
    "test:integration": "vitest run __tests__/integration --reporter=verbose",
    "test:load": "tsx __tests__/load/load-test.ts",
    "test:security": "tsx __tests__/security/security-test.ts",
    "typecheck": "tsc",
    "lint": "biome check .",
    "lint:fix": "biome check . --write",
    "format": "biome format . --write",
    "format:check": "biome format .",
    "db:migrate": "prisma migrate dev",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma migrate reset --force",
    "db:setup": "npm run db:reset && npm run db:seed",
    "setup": "./scripts/setup.sh",
    "setup:full": "./scripts/setup.sh --full"
  },
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@react-router/dev": "^7.8.0",
    "@tailwindcss/vite": "^4.1.11",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.17",
    "@types/node": "^20",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "@vitest/ui": "^3.2.4",
    "jsdom": "^26.1.0",
    "typescript": "^5.8.3",
    "vite": "^7.1.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@node-rs/argon2": "^2.0.2",
    "@prisma/client": "^6.13.0",
    "@react-router/node": "^7.8.0",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^4.17.21",
    "@types/express-session": "^1.18.0",
    "@types/node-fetch": "^2.6.13",
    "@types/socket.io": "^3.0.2",
    "bcrypt": "^6.0.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "connect-redis": "^7.1.1",
    "cors": "^2.8.5",
    "express": "^4.21.0",
    "express-session": "^1.18.1",
    "helmet": "^8.0.0",
    "ioredis": "^5.4.1",
    "isbot": "^5",
    "node-fetch": "^3.3.2",
    "prisma": "^6.13.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.8.0",
    "reflect-metadata": "^0.2.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "socket.io-redis": "^6.1.1",
    "tsx": "^4.20.3",
    "tsyringe": "^4.10.0",
    "winston": "^3.16.0",
    "zustand": "^5.0.7"
  }
